<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:enabled="false"
                android:onClick="sel_1"
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:enabled="false"
                android:onClick="sel_2"
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:enabled="false"
                android:onClick="sel_3"
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:enabled="false"
                android:onClick="sel_4"
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:enabled="false"
                android:onClick="sel_5"
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:enabled="false"
                android:onClick="sel_6"
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:enabled="false"
                android:onClick="sel_7"
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:enabled="false"
                android:onClick="sel_8"
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:enabled="false"
                android:onClick="sel_9"
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

    </TableLayout>
    <TextView
        android:text="----"
        android:id="@+id/estado"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:onClick="iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Iniciar" />
</LinearLayout>